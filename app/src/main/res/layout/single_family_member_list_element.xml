<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:id="@+id/ll161"
            android:layout_toLeftOf="@+id/ll1236">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/memberList_Profile"
                android:layout_margin="8dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    style="@style/TitleText"
                    android:id="@+id/memberList_Name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    style="@style/SubTitleText"
                    android:id="@+id/memberList_Data"
                    android:layout_marginTop="8dp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:focusableInTouchMode="true"
            android:id="@+id/ll1236"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/memberList_MsgBtn"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/memberList_CallBtn"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/memberList_SettingBtn"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>