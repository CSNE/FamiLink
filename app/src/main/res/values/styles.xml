<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">true</item>
    </style>
    <style name="ButtonText">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">#000000</item>
    </style>
    <style name="TitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="BigTitleText">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="BodyText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#444444</item>
    </style>
    <style name="SubTitleText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#999999</item>
    </style>
    <style name="SubTitleText.Important">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TabText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="InfoText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomActionBarTheme01" parent="@android:style/Theme.Holo.Light.DarkActionBar" >
        <item name="android:actionBarSize">55dp</item>
    </style>

    <style name="CustomActionTabStyle" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarTabBarStyle">@style/ActionBarTabStyle.MY_STYLE</item>
        <item name="android:actionBarSize">40dp</item>
    </style>

    <style name="ActionBarTabStyle.MY_STYLE" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:paddingLeft">1dip</item>
        <item name="android:paddingRight">1dip</item>
        <item name="android:layout_margin">1dip</item>
    </style>

    <style name="Settings" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:colorBackground">#ffedcc</item>
    </style>

</resources>
